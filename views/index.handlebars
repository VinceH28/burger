<div class="header">

  <h1>Burgers!</h1>
</div>

<div class="container">

  <style>
    .container{
        background-image:"https://github.com/VinceH28/burger/blob/master/public/assets/images/index_background.png?raw=true";
        background-repeat: no-repeat;
        background-position: right top;
        
    }
</style>

  <div class="jumbotron">
    <h2>Burgers that are not devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <br><br>

  <div class="jumbotron">
    <h2>Burgers that are devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>



<div class="container">

  <div class="jumbotron">
    <h2> Add a Burgers </h2>
      <form id="create-form">

        <div class="form-group">
          <label for="bg">Burger Name:</label>
          <input type="text" id="bg" name="name">
        </div>

        <div class="form-group">
          <label for="devoured"> Devoured? </label><br>
          <input type="radio" name="devoured" value="1" id="devoured" checked> Eaten! <br>
          <input type="radio" name="devoured" value="0" id="not-devoured"> Not Eaten!
        </div>

        <button type="submit"> Add Burger</button>
      </form>
   </div>
</div>
